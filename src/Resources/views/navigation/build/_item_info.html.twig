{# Display detailed information about a navigation item #}
{% import '@SyliusUi/Macro/flags.html.twig' as flags %}

<div class="ui relaxed divided list">
    {# Item Type #}
    <div class="item">
        <i class="{{ ssn_item_type_icon(item) }}"></i>
        <div class="content">
            <div class="header">{{ 'setono_sylius_navigation.ui.type'|trans }}</div>
            <div class="description">
                {{ ('setono_sylius_navigation.ui.' ~ ssn_item_type(item))|trans }}
            </div>
        </div>
    </div>

    {# Status #}
    <div class="item">
        {% if item.enabled %}
            <i class="green check circle icon"></i>
            <div class="content">
                <div class="header">{{ 'sylius.ui.enabled'|trans }}</div>
            </div>
        {% else %}
            <i class="red times circle icon"></i>
            <div class="content">
                <div class="header">{{ 'sylius.ui.disabled'|trans }}</div>
            </div>
        {% endif %}
    </div>

    {# Taxon (if TaxonItem) #}
    {% if item.taxon is defined and item.taxon is not null %}
        <div class="item">
            <i class="sitemap icon"></i>
            <div class="content">
                <div class="header">{{ 'setono_sylius_navigation.ui.linked_taxon'|trans }}</div>
                <div class="description">
                    <a href="{{ path('sylius_shop_product_index', {'slug': item.taxon.slug}) }}" target="_blank" rel="noopener noreferrer">
                        {{ item.taxon.name }}
                        <i class="external alternate icon"></i>
                    </a>
                    {% if item.taxon.code %}
                        <span class="ui tiny label">{{ item.taxon.code }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}

    {# Orphaned Taxon Warning #}
    {% if item.taxon is defined and item.taxon is null %}
        <div class="item">
            <i class="yellow warning sign icon"></i>
            <div class="content">
                <div class="header">{{ 'setono_sylius_navigation.ui.linked_taxon'|trans }}</div>
                <div class="description">
                    <div class="ui small yellow message" style="margin-top: 0.25rem;">
                        {{ 'setono_sylius_navigation.ui.orphaned_taxon_description'|trans }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {# Link details (if LinkItem) #}
    {% if item.url is defined and item.url is not null %}
        <div class="item">
            <i class="linkify icon"></i>
            <div class="content">
                <div class="header">{{ 'setono_sylius_navigation.ui.link_url'|trans }}</div>
                <div class="description">
                    <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">
                        {{ item.url }}
                        <i class="external alternate icon"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="item">
            {% if item.openInNewTab %}
                <i class="green check icon"></i>
                <div class="content">
                    <div class="header">{{ 'setono_sylius_navigation.ui.opens_in_new_tab'|trans }}</div>
                </div>
            {% else %}
                <i class="grey times icon"></i>
                <div class="content">
                    <div class="header">{{ 'setono_sylius_navigation.ui.opens_in_same_tab'|trans }}</div>
                </div>
            {% endif %}
        </div>

        {% if item.nofollow or item.noopener or item.noreferrer %}
            <div class="item">
                <i class="shield icon"></i>
                <div class="content">
                    <div class="header">{{ 'setono_sylius_navigation.ui.link_attributes'|trans }}</div>
                    <div class="description">
                        {% if item.nofollow %}
                            <span class="ui tiny label">nofollow</span>
                        {% endif %}
                        {% if item.noopener %}
                            <span class="ui tiny label">noopener</span>
                        {% endif %}
                        {% if item.noreferrer %}
                            <span class="ui tiny label">noreferrer</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}

    {# Labels by Locale #}
    <div class="item">
        <i class="language icon"></i>
        <div class="content">
            <div class="header">{{ 'setono_sylius_navigation.ui.labels_by_locale'|trans }}</div>
            <div class="description">
                <div class="ui small divided list" style="margin-top: 0.5rem;">
                    {% for translation in item.translations %}
                        <div class="item">
                            <div class="content">
                                {{ flags.fromLocaleCode(translation.locale) }}
                                <strong>{{ translation.locale|sylius_locale_name }}:</strong>
                                {% if translation.label %}
                                    {{ translation.label }}
                                {% else %}
                                    <span class="ui tiny grey label">
                                        {% if item.taxon is defined and item.taxon is not null %}
                                            {{ item.taxon.name }} <i>({{ 'setono_sylius_navigation.ui.from_taxon'|trans }})</i>
                                        {% else %}
                                            <i>{{ 'setono_sylius_navigation.ui.no_label'|trans }}</i>
                                        {% endif %}
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    {# Channels #}
    <div class="item">
        <i class="globe icon"></i>
        <div class="content">
            <div class="header">{{ 'sylius.ui.channels'|trans }}</div>
            <div class="description">
                {% if item.channels is empty %}
                    <span class="ui tiny label">{{ 'setono_sylius_navigation.ui.all_channels'|trans }}</span>
                {% else %}
                    {% for channel in item.channels %}
                        <span class="ui tiny label">{{ channel.name }}</span>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>

    {# Created/Updated #}
    {% if item.createdAt %}
        <div class="item">
            <i class="calendar icon"></i>
            <div class="content">
                <div class="header">{{ 'sylius.ui.created_at'|trans }}</div>
                <div class="description">{{ item.createdAt|date('Y-m-d H:i:s') }}</div>
            </div>
        </div>
    {% endif %}

    {% if item.updatedAt %}
        <div class="item">
            <i class="calendar check icon"></i>
            <div class="content">
                <div class="header">{{ 'sylius.ui.last_updated'|trans }}</div>
                <div class="description">{{ item.updatedAt|date('Y-m-d H:i:s') }}</div>
            </div>
        </div>
    {% endif %}
</div>
